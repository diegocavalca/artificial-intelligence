(defun lerI ()
  (print '>)
  (setq texto (read))
  (do ((texto texto (read)))
      ((equalp texto 'FIM) 'tchau)
    (princ "Palavra digitada:")
    (princ texto)
    (print '>)
  ) 
)

(defun lerR ()
  (print '>)
  (setq texto (read))
  (if (not (equalp texto 'FIM))
     (let ()
       (princ "Palavra digitada: ")
       (princ texto)
       (lerR)
     )
   'tchau
  )
)